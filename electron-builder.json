{
  "appId": "com.electron.${name}",
  "productName": "OneClickDesktop Client",
  "asar": true,
  "directories": {
    "output": "release/"
  },
  "files": ["dist/**/*", "app/**/*", "!app/**/*.ts"],
  "win": {
    "icon": "dist/assets/icons",
    "target": ["portable"]
  },
  "portable": {
    "splashImage": "dist/assets/icons/electron.bmp",
    "artifactName": "${productName}"
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": ["AppImage"]
  },
  "beforePack": "./beforePack.js"
}
